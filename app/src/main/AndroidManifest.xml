<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mystride.mystride">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.mystride.app.MyStrideApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mystride.presentation.views.landing.CreateAccountActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mystride.presentation.views.signup.SignUpFirstLastNameActivity"
            android:label="@string/name" />
        <activity
            android:name="com.mystride.presentation.views.phone.SignUpPhoneActivity"
            android:label="@string/your_phone" />
        <activity
            android:name="com.mystride.presentation.views.country.CountriesCodesActivity"
            android:label="@string/select_country" />
        <activity android:name="com.mystride.presentation.views.confirm.ConfirmSignUpActivity" />
        <activity android:name="com.mystride.presentation.views.createhandle.CreateHandleActivity" />
        <activity
            android:name="com.mystride.presentation.views.login.LoginActivity"
            android:label="@string/login" />
    </application>

</manifest>